<%- include ("../partials/header") %>
<div class="row">
  <h1 style="text-align: center">Add a Nap Spot</h1>
  <div style="width: 30%; margin: 25px auto;">
    <form action="/locations" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input
          class="form-control"
          type="text"
          name="name"
          id="name"
          placeholder="Cozy Place"
        />
      </div>
      <div class="form-group">
        <label for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          name="image"
          id="image"
          placeholder="Img here"
          required
        />
        <small
          >Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on
          how to copy unsplash urls</small
        >
      </div>
      <div class="form-group">
        <label for="location">Address</label>
        <input
          class="form-control"
          type="text"
          name="location"
          id="location"
          placeholder="Snuggle Ave, 2nd Floor"
        />
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input
          class="form-control"
          type="text"
          name="description"
          id="description"
          placeholder="Secluded yet accessible"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>
    <a href="/locations">Go Back</a>
  </div>
</div>
<%- include ("../partials/footer") %>
