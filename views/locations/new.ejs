<%- include ("../partials/header") %>
<div class="row">
  
  <div style="width: 30%; margin: 25px auto;">
    <h1>Add a Nap Spot</h1>
    <form action="/locations" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input
          class="form-control"
          type="text"
          name="name"
          id="name"
          placeholder="Cozy Place"
        />
      </div>
      <div class="form-group">
        <label for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          name="image"
          id="image"
          placeholder="Img here"
          required
        />
        <small
          Must be a url, sorry users >
        
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input
          class="form-control"
          type="text"
          name="description"
          id="description"
          placeholder="Secluded yet accessible"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>
    <a href="/locations">Go Back</a>
  </div>
</div>
<%- include ("../partials/footer") %>
