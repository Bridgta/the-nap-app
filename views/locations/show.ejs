<%- include ("../partials/header") %>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="thumbnail">
          <img class="img-responsive" src="<%= location.image %>" />
          <div class="caption-full">
            <h4 class="pull-right">DATE</h4>
            <h4><a><%= location.name %></a></h4>
            <p><%= location.description %></p>
            <p>
              <em> Nap Scout: <%= location.creator.username %> </em>
            </p>

            <% if(currentUser && location.creator.id.equals(currentUser._id)) {
            %>
            <a
              class="btn btn-warning"
              href="/locations/<%= location._id %>/edit"
              >Edit</a
            >
            <form
              id="delete-form"
              action="/locations/<%= location._id %>?_method=DELETE"
              method="post"
            >
              <button class="btn btn-danger" type="submit">Delete</button>
            </form>
            <% } %>
          </div>
        </div>

        <div class="well">
          <div class="text-right">
            <a
              class="btn btn-success"
              href="/locations/<%= location._id %>/comments/new"
              >Add New Comment</a
            >
          </div>
          <hr />
          <% location.comments.forEach(function(comment){ %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.creator.username %></strong>
              <span class="pull-right">10 days ago</span>
              <p>
                <%= comment.text %>
              </p>
              <% if(currentUser && comment.creator.id.equals(currentUser._id)){
              %>
              <a
                class="btn btn-xs btn-warning"
                href="/locations/<%=location._id %>/comments/<%=comment._id %>/edit"
                >Edit</a
              >
              <form
                id="delete-form"
                action="/locations/<%=location._id %>/comments/<%=comment._id %>?_method=DELETE"
                method="POST"
              >
                <input
                  type="submit"
                  class="btn btn-xs btn-danger"
                  value="Delete"
                />
              </form>
              <% } %>
            </div>
          </div>

          <% }) %>
        </div>
      </div>
    </div>
  </div>
</body>
<%- include ("../partials/footer") %>
