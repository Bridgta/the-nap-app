<%- include ("../partials/header") %>

<div class="container">
  <div class="row">
    <div style="width: 30%; margin: 25px auto;">
      <h1 style="text-align: center">Edit <%= location.name %></h1>
      <form action="/locations/<%= location._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="location[name]"
            value="<%= location.name %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="location[image]"
            value="<%= location.image %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="location[description]"
            value="<%= location.description %>"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-dark btn-block">Submit</button>
        </div>
      </form>
      <a href="/locations">Go Back</a>
    </div>
  </div>
</div>
<%- include ("../partials/footer") %>
